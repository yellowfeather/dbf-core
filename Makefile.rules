# Compiler flags
CC = gcc
CFLAGS = -Wall

# Settings
LOG = make.log
DIRS = src
BIN = dbf
VERSION = 0.9pre
PREFIX = /usr/local

# Compiler settings - do not change
# erased dbfversion.o
OBJ = an_string.o codepages.o congraph.o csv.o dbf.o endian.o sql.o statistic.o
HDR = $(OBJ:%.o=%.h)
SRC = $(OBJ:%.o=%.c)
DOC = BUGS ChangeLog README CREDITS MANIFEST INSTALL FAQ


# Layout
YELLOW = \033[1;33m
NORMAL = \033[m
GREEN = \033[1;32m
RED = \033[1;31m

.c.o:
	$(CC) $(CFLAGS) -c $<
